<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.examples.activity_launch_mode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- TaskAffinity Examples. com/examples/activity_launch_mode/taskAffinity/Readme.md-->
        <activity android:name=".taskAffinity.TaskAffinityTestFirstActivity"
            android:taskAffinity=".taskAffinity"/>
        <activity android:name=".taskAffinity.TaskAffinityTestSecondActivity"
            android:taskAffinity=".taskAffinity" />
        <activity android:name=".taskAffinity.TaskAffinityTestThirdActivity"
            android:taskAffinity=".taskAffinity" />
        <activity android:name=".taskAffinity.TaskAffinityTestNoAffinityFirstActivity" />
        <activity android:name=".taskAffinity.TaskAffinityTestNoAffinitySecondActivity" />

        <!-- LaunchMode SingleTop Example        -->
        <activity android:name=".ThirdActivity" />
        <activity android:name=".SecondActivity" />
        <activity android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
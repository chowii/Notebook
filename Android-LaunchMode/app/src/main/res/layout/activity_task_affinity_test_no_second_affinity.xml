<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Affinity Second Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/second_no_affinity_finish_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Activity"
        app:layout_constraintBottom_toTopOf="@+id/second_no_affinity_finish_affinity_button"
        app:layout_constraintEnd_toStartOf="@id/to_third_affinity_activity_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_text" />

    <Button
        android:id="@+id/to_third_affinity_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Third Affinity Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/second_no_affinity_finish_activity_button"
        app:layout_constraintTop_toBottomOf="@id/activity_text" />

    <Button
        android:id="@+id/second_no_affinity_finish_affinity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Affinity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/second_no_affinity_finish_activity_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/second_no_affinity_finish_activity_button"
        app:layout_constraintTop_toBottomOf="@+id/second_no_affinity_finish_activity_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
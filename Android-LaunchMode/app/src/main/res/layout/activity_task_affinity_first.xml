<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8bc34a">

    <TextView
        android:id="@+id/activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Affinity Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_affinity_to_finish_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Activity"
        app:layout_constraintBottom_toTopOf="@+id/first_affinity_finish_affinity_button"
        app:layout_constraintEnd_toStartOf="@+id/first_affinity_to_second_affinity_activity_button"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_text"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/first_affinity_finish_affinity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Affinity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/first_affinity_to_finish_activity_button"
        app:layout_constraintStart_toStartOf="@+id/first_affinity_to_finish_activity_button"
        app:layout_constraintTop_toBottomOf="@+id/first_affinity_to_finish_activity_button" />

    <Button
        android:id="@+id/first_affinity_to_second_affinity_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Second Affinity Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/first_affinity_to_finish_activity_button"
        app:layout_constraintTop_toBottomOf="@id/activity_text" />

</androidx.constraintlayout.widget.ConstraintLayout>